@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Input";
}

    <div class="text-center">

        <h2>Input your information!</h2>

        <form method="post" class="form" asp-controller="Home" asp-action="Result">
            <p>Name:</p><input type="text" class="name" name="Name" />
            <p>Surname:</p><input type="text" class="surname" name="Surname" />
            <p>Email:</p><input type="email" class="email" name="Email" />
            <p>Birthday:</p><input type="date" name="Date" class="date" /><br /><br />
            <input type="submit" class="submit" disabled="disabled" value="Proceed" />
        </form>

    </div>
