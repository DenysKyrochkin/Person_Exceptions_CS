@model Zodiac.Models.Person
@{
    ViewData["Title"] = "Result";
}
@{
    Layout = "_Layout";
}

    <div class="result">
        <h1>Your data:</h1>
        <div>Name: @Model.Name</div>
        <div>Surname: @Model.Surname</div>
        <div>Email: @Model.Email</div>
        <div>Birthday: @Model.Birthday.Birthday.ToLongDateString()</div>
        <div>Adult: @Model.IsAdult</div>
        <div>Zodiac: @Model.SunSign</div>
        <div>Chinese Zodiac: @Model.ChineseSign</div>
        <div>Celebrate: @Model.IsBirthday</div>
        <h1>@ViewBag.Whishes</h1>
    </div>


